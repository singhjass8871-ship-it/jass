    <script>
        const API_KEY = 'AIzaSyAY_aUTcloH3Gy7_k6UXPyzJAsz94GWc4k';
        const BLOG_ID = '4579689781890950064';
        async function init() {
            try {
                const res = await fetch(`https://www.googleapis.com/blogger/v3/blogs/${BLOG_ID}/posts?key=${API_KEY}`);
                const data = await res.json();
                const feed = document.getElementById('feed');
                feed.innerHTML = '';
                data.items.forEach(post => {
                    let img = post.content.match(/<img[^>]+src="([^">]+)"/)?.[1] || 'https://via.placeholder.com/800';
                    feed.innerHTML += `
                        <div class="post-card">
                            <img src="${img}" class="bg-img">
                            <div class="content-overlay">
                                <h2 class="post-title">${post.title}</h2>
                                <button class="btn-ai" onclick="alert('AI Assistant Coming Soon!')">Ask AI ðŸ¤–</button>
                            </div>
                        </div>`;
                });
            } catch (e) { document.getElementById('feed').innerHTML = "Error loading data."; }
        }
        init();
    </script>
